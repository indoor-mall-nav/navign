# MongoDB Configuration
# The hostname and port for the MongoDB server
MONGODB_HOST=localhost:27017

# The database name to use
MONGODB_DB_NAME=indoor-mall-nav

# Server Configuration
# The address and port the server should bind to
SERVER_BIND_ADDR=0.0.0.0:3000

# Rate Limiting Configuration
# Maximum number of requests per second (default: 100)
RATE_LIMIT_PER_SECOND=100

# Maximum burst size for rate limiting (default: 200)
RATE_LIMIT_BURST_SIZE=200

# Key Management
# Path to the server's private key file (default: ./private_key.pem)
# PRIVATE_KEY_FILE=./private_key.pem

# Logging
# Log level: error, warn, info, debug, trace
# RUST_LOG=info
